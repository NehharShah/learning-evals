# API Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GROQ_API_KEY=your_groq_api_key_here

# Custom Provider Configuration
CUSTOM_PROVIDER_URL=https://your-custom-api.com/v1
CUSTOM_PROVIDER_API_KEY=your_custom_api_key_here

# Enabled Providers (comma-separated list)
ENABLED_PROVIDERS=openai,anthropic,google,groq

# Application Settings
ENVIRONMENT=development
DEBUG=true

# Security Settings
SECRET_KEY=your_secret_key_here_generate_a_random_string
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_TYPES=.csv,.jsonl

# CORS Settings (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Trusted hosts for production (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
EVALUATION_RATE_LIMIT_PER_MINUTE=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database (optional - for future expansion)
# DATABASE_URL=sqlite:///./app.db

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here

# OpenAI Model Defaults
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS=1000
TEMPERATURE=0.7
TOP_P=1.0
FREQUENCY_PENALTY=0.0

# Prompt Injection Detection Keywords (comma-separated)
INJECTION_KEYWORDS=ignore previous,disregard instructions,act as,pretend to be,forget everything,new instructions

# Toxicity Detection (placeholder for future implementation)
ENABLE_TOXICITY_DETECTION=false 